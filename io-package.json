            "type": "state",
            "common": {
                "name":  "State",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.stateChange",
            "type": "state",
            "common": {
                "name":  "StateChange",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.localBytes",
            "type": "state",
            "common": {
                "name":  "LocalBytes",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.localBytesFormated",
            "type": "state",
            "common": {
                "name":  "LocalBytesFormated",
