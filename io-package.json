{
    "common": {
        "name":                     "syncthing",
        "version":                  "0.1.0",
	    "news": {
			"0.1.0": {
			  "en": "initial adapter",
			  "de": "Initiale Version"
			}
		},
        "title":                    "Syncthing Adapter",
        "desc":                     {
				 "en": "Syncthing Adapter to request a Syncthing folder status",
				 "de": "Syncthing Adapter um einen Syncthing Folder Status abzufragen"
		},
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "icon":                     "syncthing.png",
        "enabled":                  true,
		"extIcon":                  "https://raw.githubusercontent.com/joergzdarsky/ioBroker.syncthing/master/admin/syncthing.png",
		"keywords":                 ["syncthing", "cloud", "folder", "share"],
        "readme":                   "https://github.com/joergzdarsky/ioBroker.syncthing/blob/master/README.md",
		"loglevel":                 "info",
        "type":                     "common adapters",
        "restartAdapters":          ["vis"]
    },
    "native": {
		"syncthingurl": "http://127.0.0.1:8080",
		"syncthingapikey": "YourApiKey",
		"syncthingfolderid": "YourFolderID"
    },
    "objects": [
    ],
    "instanceObjects": [
        {
            "_id":  "folderState",
            "type": "state",
            "common": {
                "name":  "Folder state",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folderStateChange",
            "type": "state",
            "common": {
                "name":  "Folder state-change timestamp",
                "type":  "datetime",
                "read":  true,
                "write": false
            },
            "native": {}
        },
		{
            "_id":  "folderLocalBytes",
            "type": "state",
            "common": {
                "name":  "Folder local bytes",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
		{
            "_id":  "folderLocalBytesFormated",
            "type": "state",
            "common": {
                "name":  "Folder local bytes (formated)",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
				{
            "_id":  "folderGlobalBytes",
            "type": "state",
            "common": {
                "name":  "Folder global bytes",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
		{
            "_id":  "folderGlobalBytesFormated",
            "type": "state",
            "common": {
                "name":  "Folder global bytes (formated)",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        }
    ]
}
