            },
            "native": {}
        },
        {
            "_id":  "folder.folderGlobalBytesFormated",
            "type": "state",
            "common": {
                "name":  "Folder GlobalBytes (Formated)",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        }
    ]
