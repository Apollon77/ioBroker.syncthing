{
    "common": {
        "name":                     "syncthing",
        "version":                  "0.1.0",
	    "news": {
			"0.1.0": {
			  "en": "initial adapter",
			  "de": "Initiale Version"
			}
		},
        "title":                    "Syncthing Adapter",
        "desc":                     {
				 "en": "Syncthing Adapter to request a Syncthing folder status",
				 "de": "Syncthing Adapter um einen Syncthing Folder Status abzufragen"
		},
        "platform":                 "Javascript/Node.js",
        "mode":                     "daemon",
        "schedule":                 "/5 * * * *",
        "icon":                     "syncthing.png",
        "enabled":                  true,
		"extIcon":                      "https://raw.githubusercontent.com/joergzdarsky/ioBroker.syncthing/master/admin/syncthing.png",
		"keywords":                     ["syncthing", "cloud", "folder", "share"],
        "readme":                   "https://github.com/joergzdarsky/ioBroker.syncthing/blob/master/README.md",
		"loglevel":                     "info",
        "type":                     "common adapters",
        "restartAdapters":          ["vis"]
    },
    "native": {
		"syncthingurl": "http://127.0.0.1:8080",
		"syncthingapikey": "YourApiKey",
		"syncthingfolderid": "YourFolderID"
    },
    "objects": [

    ],
    "instanceObjects": [
        {
            "_id": "folder",
            "type": "channel",
            "common": {
            "role": "folder",
            "name": ""
          },
            "native": {}
        },
        {
            "_id":  "folder.folderState",
            "type": "state",
            "common": {
                "name":  "Folder State",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.folderStateChange",
            "type": "state",
            "common": {
                "name":  "Folder StateChange",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.folderLocalBytes",
            "type": "state",
            "common": {
                "name":  "Folder (LocalBytes)",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.folderLocalBytesFormated",
            "type": "state",
            "common": {
                "name":  "Folder LocalBytes (Formated)",
                "type":  "string",
                "read":  true,
                "write": false
            },
            "native": {}
        },
        {
            "_id":  "folder.folderGlobalBytes",
            "type": "state",
            "common": {
                "name":  "Folder GlobalBytes",
                "type":  "string",
                "read":  true,
